{
  "name": "digdir-design-system",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "author": "DigDir design system team",
  "license": "BSD3",
  "devDependencies": {
    "@babel/core": "^7.15.8",
    "@storybook/addon-actions": "^6.3.10",
    "@storybook/addon-essentials": "^6.3.10",
    "@storybook/addon-links": "^6.3.10",
    "@storybook/html": "^6.3.12",
    "@storybook/preset-scss": "^1.0.3",
    "@storybook/theming": "^6.3.12",
    "@whitespace/storybook-addon-html": "^5.0.0",
    "babel-loader": "^8.2.2",
    "lerna": "^4.0.0",
    "prettier": "^2.4.1",
    "rollup": "^2.58.0",
    "sass": "^1.42.1",
    "sass-loader": "10.1.1",
    "storybook-design-token": "^1.3.0"
  },
  "scripts": {
    "start": "start-storybook -p 6006",
    "start:clean": "start-storybook -p 6006 --no-manager-cache",
    "build": "lerna run build",
    "build:docs": "build-storybook -o ./docs",
    "version:changed": "lerna version --no-push --conventional-commits --no-private",
    "publish:changed": "lerna publish from-git",
    "version-publish-push": "lerna publish --conventional-commits"
  },
  "prettier": {
    "trailingComma": "all",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true
  }
}
